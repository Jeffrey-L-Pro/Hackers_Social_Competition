<page>
<view class="container">
  <view class="page-body">
      <!-- <swiper class="body-pic" autoplay="true" interval="4000" indicator-dots="ture"> 
          <swiper-item><image mode="scaleToFill" src='/iconlib/cheers.png'></image></swiper-item>
          <swiper-item><image mode="scaleToFill" src='/iconlib/2020.jpeg'></image></swiper-item>
